<% @comments.each do |comment| %>
  $('.comments_pagination').append("<%= j render 'comment_detail', :comment => comment %>");
<% end %>

<% if @comments.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate(@comments) %>'); 
<% else %>
  $('.pagination').remove(); 
<% end %>
<% sleep 0.5 %>