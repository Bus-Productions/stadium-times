      
      <section class='article-focus main-content'>

        <article>

          <header>
            <h3>
              <a href='<%= @post.link_for_post %>' target="<%= determine_target(@post) %>">
                <%= @post.title %>
              </a>
            </h3>
          </header>
          
          <p>
          <%= @post.text %>
          </p>


          <footer>

            <div class='article-controls'>
              <div class='btn-group' id="votes_<%= @post.id %>">
                <%= render 'shared/vote_up_or_down_links', post: @post %>
              </div>
              <a class='btn small light' href='#'>
                <span class='ss-redo circle'></span>
                Respond
              </a>
              <a class='btn small light' href='#'>
                <span class='ss-action'></span>
                Share
              </a>
              <%= render 'shared/spam', received_obj: @post %>
            </div>
            <a class='btn primary' href='#sidebar' id='sidebarButton'>Join the Conversation</a>

