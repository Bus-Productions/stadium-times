          <ul class='saved-articles list backend-user-container'>
	            	<% if @case == 'drafts' %>
	            		<div class="draft_pagination">
	            			<% @posts.each do |post| %>
	            				<%= render 'drafts_written_by_user', :post => post, :topics => post.topics, :user => post.user %>
	            			<% end %>
	            		</div>
	            	<% else %>
	            		<div class="post_pagination">
	            			<% @posts.each do |post| %>
	            				<%= render 'post_written_by_user', :post => post, :topics => post.topics, :user => post.user %>
	            			<% end %>
	            		</div>
	       				<% end %>		
          </ul>
            