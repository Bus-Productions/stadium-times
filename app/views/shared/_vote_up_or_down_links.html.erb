<% if current_user %>
	<% post_vote = post.voted_on(current_user.id) %>
<% end %>

<% if post_vote %>
	<% if post_vote.vote == "up" %>
		<%= link_to content_tag(:span, nil, :class => 'ss-like') + "#{post.upvote_count_text}", vote_path(post, "up"), :class => "btn small light active post_vote_up", :remote => true %>

		<%= link_to content_tag(:span, nil, :class => 'ss-dislike') + "#{post.downvote_count_text}", vote_path(post, "down"), :class => "btn small light post_vote_down", :remote => true %>
	<% else %>
		<%= link_to content_tag(:span, nil, :class => 'ss-like') + "#{post.upvote_count_text}", vote_path(post, "up"), :class => "btn small light post_vote_up", :remote => true %>

		<%= link_to content_tag(:span, nil, :class => 'ss-dislike') + "#{post.downvote_count_text}", vote_path(post, "down"), :class => "btn small light active post_vote_down", :remote => true %>
	<% end %>
<% else %>
	<%= link_to content_tag(:span, nil, :class => 'ss-like') + "#{post.upvote_count_text}", vote_path(post, "up"), :class => "btn small light post_vote_up", :remote => true %>

	<%= link_to content_tag(:span, nil, :class => 'ss-dislike') + "#{post.downvote_count_text}", vote_path(post, "down"), :class => "btn small light post_vote_down", :remote => true %>
<% end %>



