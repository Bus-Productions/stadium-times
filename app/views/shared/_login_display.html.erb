<div id="user_nav">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
    <br/>Joined <%= time_ago_in_words(current_user.created_at) %> ago
    <br/><%= image_tag(current_user.profile_picture, size: "100x100") %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %> <%= link_to "Sign in with Twitter", "/auth/twitter" %>
  <% end %>
</div>