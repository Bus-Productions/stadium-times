        
        <div class='navbar-wrap'>
          <header>
            <h5>
              <a class='accordion-toggle collapsed' data-parent='#accordion' data-toggle='collapse' href='#filter-navbar-collapse'>
                <span class='label'>
                  Browsing:
                </span>
                <h5 class='tag'>
                  <% if @browsing %>
                    <%= @browsing %>
                  <% elsif @post %>
                    <%= @post.first_topic_text %>
                  <% elsif @topic %>
                    <%= @topic.topic_name %>
                  <% else %>
                    The Best Sports News
                  <% end %>
                </h5>
                <span class='toggle-down'>
                  <span class='caret'></span>
                </span>
              </a>
            </h5>
          </header>
          <div class='panel-collapse collapse' id='filter-navbar-collapse'>
            <div class='panel-body'>
              <ul class='filter-list'>
                <li class='list-title'>
                  <h5 class='tag'>
                    <a href='<%= topics_path %>'>Topics</a>
                  </h5>
                </li>
                <% @browsing_topics.each do |topic| %>
                  <%= render 'shared/header_content/topic_in_dropdown', :topic => topic %>
                <% end %>
              </ul>
              <ul class='filter-list'>
                <li class='list-title'>
                  <h5 class='tag'>
                    <a href='#'>Sort By</a>
                  </h5>
                </li>
                <li>
                  <%= link_to 'Popular', browse_link('home', nil, 'score') %>
                </li>
                <li>
                  <%= link_to 'New', browse_link('home', nil, 'new') %>
                </li>
              </ul>
              <div class='filter-slider-list'>
                <div class='list-title'>
                  <h5 class='tag'>
                    <a href="<%= posts_path %>">Today's Most Popular</a>
                  </h5>
                </div>
                <div class='carousel slide' id='carousel-filter-slider-list'>
                  <div class='carousel-inner'>
                    <div class='item active'>

                      <% popular_posts.each_with_index do |post, index| %>

                        <% if index%8 == 0 && index != 0 %>
                          </div>
                          <div class="item">
                        <% end %>

                        <% if index%4 == 0 %>
                          <div class='column'>
                        <% end %>

                        <%= render 'shared/header_content/article_link_partial', :post => post %>
                                                
                        <% if index%4 == 3 %>
                          </div>
                        <% end %>

                      <% end %>
                        
                    </div>
                  </div>
                  <ol class='carousel-indicators'>
                    <li class='active' data-slide-to='0' data-target='#carousel-filter-slider-list'></li>
                    <li data-slide-to='1' data-target='#carousel-filter-slider-list'></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>